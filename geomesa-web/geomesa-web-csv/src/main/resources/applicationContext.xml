<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="csvUploadCache" class="org.locationtech.geomesa.web.csv.CSVUploadCache"/>

    <bean name="csvEndpoint" class="org.locationtech.geomesa.web.csv.CSVEndpoint">
      <constructor-arg index="0" ref="csvUploadCache"/>
    </bean>

    <bean name="csvADSParams" class="org.locationtech.geomesa.web.csv.ADSParams">
      <constructor-arg index="0" value="instanceId"/>
      <constructor-arg index="1" value="zookeeper"/>
      <constructor-arg index="2" value="user"/>
      <constructor-arg index="3" value="pass"/>
      <constructor-arg index="4" value="table"/>
    </bean>

    <bean name="geomesaCSVIngestProcess" class="org.locationtech.geomesa.web.csv.IngestCSVProcess">
      <constructor-arg index="0" ref="csvUploadCache"/>
      <constructor-arg index="1" ref="geomesaImportProcess"/>
      <constructor-arg index="2" ref="catalog"/>
      <constructor-arg index="3" ref="csvADSParams"/>
    </bean>

</beans>